# http://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.js]
indent_style = space
indent_size = 4

[*.scss]
indent_size = 4

[*.sass]
indent_size = tab
indent_style = tab

[{bower.json,package.json,.travis.yml}]
indent_style = space
indent_size = 4
